@using MediPlus.DAL.Models;
@model IEnumerable<Hospital>;


<a type="button" class="btn btn-success mb-3" asp-area="Admin" asp-controller="Hospital" asp-action="Create">Create Hospital</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Hospital item in Model)
        {
            <tr>
                <th scope="row">@item.Name</th>
                <td><a class="btn btn-primary" asp-area="Admin" asp-controller="Hospital" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                <td><a class="btn btn-danger" asp-area="Admin" asp-controller="Hospital" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
            </tr>
        }

    </tbody>
    </table>
